{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES6",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "lib": ["DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["lib"],
  "exclude": ["src", "node_modules"]
}
