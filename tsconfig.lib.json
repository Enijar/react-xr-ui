{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "lib",
    "strict": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "src", "public"],
  "include": ["lib"]
}
