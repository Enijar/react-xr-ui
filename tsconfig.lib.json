{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2019", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "pretty": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "baseUrl": "./lib"
  },
  "include": ["./lib"],
  "exclude": ["./node_modules/**/*"]
}
